<div class="background">
    <div class="title-row l t b r">
        <div class="title-level white-text">
            {{ spell.level }}
        </div>
        <div class="title-right">
            <div class="title-name black-text">
                {{ spell.title }}
            </div>
        </div>
    </div>
    <div class="properties l r b">
        <div class="property-row">
            <div class="property r2">
                <div class="property-text black-text">
                    {{ spell.castingTime }}
                </div>
            </div>
            <div class="property">

                <div class="property-text  black-text">
                    {{ spell.range }}
                </div>
            </div>
        </div>
        <div class="property-row">
            <div class="property r2">
                <div class="property-text black-text">
                    {{ spell.components }}
                </div>
            </div>
            <div class="property">
                <div class="property-text black-text">
                    {{ spell.duration }}
                </div>
            </div>
        </div>
    </div>
    <div class="content l r black-text">
        {{ spell.description|raw }}
    </div>
    <div class="footer white-text">
        <div class="l footer-left">
            {% for characterClass in spell.characterClasses %}
                {{ characterClass.name }}{% if not loop.last %}, {% endif %}
            {% endfor %}
        </div>
        {#<div class="r footer-right"></div>#}
    </div>
</div>

<style>
    .black-text {
        color: black;
        background-color: white;
    }

    .white-text {
        color: white;
        background-color: red;
    }

    .r {margin-right: 15px;}
    .l {margin-left: 15px;}
    .t {margin-top: 15px;}
    .b {margin-bottom: 15px;}

    .r2 {margin-right: 2px;}
    .r4 {margin-right: 4px;}
    .r10 {margin-right: 10px;}
    .l10 {margin-left: 10px;}

    .background {
        width:500px;
        height:750px;
        background-color: red;
        display: flex;
        flex-direction: column;
        font-family: sans-serif;
    }
    .title-row {
        flex: 0 1 auto;
        display: flex;
        flex-direction: row;
    }
    .title-right {
        flex: 1;
        display: flex;
        flex-direction: column;
    }

    .title-level {
        line-height: 50px;
        flex: 0 1 65px;
        font-size: 36pt;
        font-weight: bold;
        text-align: center;
        border-top-left-radius: 15px;
    }

    .title-name {
        height: 50px;
        line-height:50px;
        font-size: 18pt;
        font-weight: bold;
        text-align: center;
        border-top-right-radius: 15px;
        border-top-left-radius: 15px;
    }

    .title-subname {
        height: 20px;
        line-height:20px;
        font-size: 12pt;
        font-weight: bold;
        text-align: center;
    }

    .properties {
        flex: 0 1 100px;
        text-align: center;
    }

    .property-row {
        height: 50px;
        display: flex;
        margin-bottom: 2px;
    }

    .property {
        flex: 1;
        height: 50px;
        display: flex;
    }

    .icon {
        flex: 0 1 50px;
        background: url(data:image/svg+xml;base64,);
    }

    .property-text {
        flex: 1;
        text-align: center;
        line-height: 50px;
        border-radius: 5px;
    }

    .property-text2 {
        flex: 1;
        text-align: center;
        line-height: 25px;
    }

    .content {
        flex: 1;
        padding: 10px;
        border-bottom-left-radius: 15px;
        border-bottom-right-radius: 15px;
    }

    .footer {
        flex: 0 1 40px;
        display: flex;
        line-height: 40px;
        font-size: 18pt;
        font-weight: bold;
    }

    .footer-left {
        flex: 1;
        text-align: start;
    }

    .footer-right {
        flex: 1;
        text-align: end;
    }
</style>